<h1>List of students and their assignments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Assignment</th>
      <th>Github url</th>
      <th>On time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @completed_assignments.each do |completed_assignment| %>
      <% if completed_assignment.on_time == false %>
        <tr class="highlight-row">
      <% else %>
        <tr>
      <% end %>
        <td><%= completed_assignment.user.name %></td>
        <td><%= completed_assignment.assignment.title %></td>
        <td><%= completed_assignment.github_url %></td>
        <td><%= completed_assignment.on_time %></td>
        <td><%= link_to 'Show', completed_assignment %></td>
        <td><%= link_to 'Edit', edit_completed_assignment_path(completed_assignment) %></td>
        <td><%= link_to 'Destroy', completed_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

